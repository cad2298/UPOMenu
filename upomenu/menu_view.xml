				<search string="Busqueda de menus">
					<field name="menus_ids" />
					<group expand="0" string="Agrupar porâ€¦">
						<filter name="group_by_name" string="Nombre"
							context="{'group_by':'menus_ids'}" />
					</group>
				</search>

			</field>
		</record>
		-->
		<!-- Menu lateral -->
		<menuitem id="UpoMenu" name="UPOMenu" action="act_menu" />
		<menuitem name="Menu" id="menus_submenu" parent="UpoMenu"
			sequence="100" action="act_menu" />
		<menuitem name="Ver menus" id="ver_menus_submenu" parent="menus_submenu"
			sequence="100" action="act_menu" />

		<menuitem name="Bebida" id="bebida_submenu" parent="UpoMenu"
			sequence="100" action="act_menu" />
		<menuitem name="Ver Bebidas" id="ver_bebidas_submenu" parent="bebida_submenu"
			sequence="100" action="act_menu" />

		<menuitem name="Platos" id="platos_submenu" parent="UpoMenu"
			sequence="100" action="act_menu" />
		<menuitem name="Ver Platos" id="ver_platos_submenu" parent="platos_submenu"

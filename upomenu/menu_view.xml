<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="act_menu" model="ir.actions.act_window">
			<field name="name">Menus</field>
			<field name="res_model">menu</field>
			<field name="view_type">form</field>
			<field name="view_mode">form,tree</field>

		</record>
		<!-- Estructura de arbol -->
		<record model="ir.ui.view" id="view_upomenu_tree_view">
			<field name="name">view_upomenu_menu_tree</field>
			<field name="model">menu</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="tree_string">
					<field name="name" />
					<field name="price" />
					
				</tree>
			</field>
		</record>
		<!-- Buscador 
		<record id="view_upomenu_menu_search" model="ir.ui.view">
